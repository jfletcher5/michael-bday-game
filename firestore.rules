rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read and write access to leaderboard (no auth required)
    match /leaderboard/{entry} {
      allow read: if true;
      allow write: if true;
    }
    
    // Allow read access to levels
    match /levels/{level} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}

